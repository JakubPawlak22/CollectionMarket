@page "/messages/"
@inject IMessageRepository _messageRepo;

@if (!isAnyConversation)
{
    <LoadingMessage Message="There is no Conversation." />
}
else if (Model == null)
{
    <LoadingMessage Message="Loading Conversations informations." />
}
else
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Username</th>
                <th>Last Message</th>
                <th>Last Message's Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var conversation in Model)
            {
                <tr>
                    <td>
                        @conversation.Username
                    </td>
                    <td>
                        @conversation.LastMessageContent
                    </td>
                    <td>
                        @conversation.Date
                    </td>
                    <td>
                        <a href="/messages/@conversation.Username" class="btn btn-primary">
                            <span class="oi oi-arrow-right">Conversation</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IList<ConversationModel> Model;
    private bool isAnyConversation = true;
    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Model = await _messageRepo.GetConversations(Endpoints.MessagesEndpoint);
            isAnyConversation = (Model != null && Model.Count > 0);
            this.StateHasChanged();
        }
    }
}