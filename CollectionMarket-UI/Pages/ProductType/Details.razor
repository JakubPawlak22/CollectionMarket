@page "/producttypes/{Id}"
@inject IProductTypeRepository _productsRepo;


@if (Model == null)
{
    <LoadingMessage Message="Loading Product informations" />
}
else
{
    <h3>@Model.Name</h3>
    <table class="table table-dark">
        <tbody>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    @Model.Name
                </td>
            </tr>
            <tr>
                <td>
                    Category
                </td>
                <td>
                    <p><a href=@($"categories/{Model.CategoryId}")>@Model.CategoryName</a></p>
                </td>
            </tr>
        </tbody>
    </table>
    <h4>Attributes</h4>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
                <th>Data Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var attr in Model.Attributes)
            {
                <tr>
                    <td>@attr.AttributeName</td>
                    <td>@attr.AttributeValue</td>
                    <td>@attr.DataType</td>
                </tr>
            }
        </tbody>
    </table>
    <AuthorizeView>
        <div class="card">
            <button @onclick="@ShowCreatePartial">Create Offer</button>
            <div class="card-body">
                <div hidden="@IsCreatePartialHidden">
                    <CollectionMarket_UI.Pages.SaleOffer.Create ProductTypeId="Model.Id" />
                </div>
            </div>
        </div>
    </AuthorizeView>
    <CollectionMarket_UI.Pages.SaleOffer.Index ProductTypeId="Model.Id" />
}

@code {
    [Parameter]
    public string Id { get; set; }
    private bool IsCreatePartialHidden = true;
    private ProductTypeModel Model;
    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            int id = Convert.ToInt32(Id);
            Model = await _productsRepo.Get(Endpoints.ProductTypesEndpoint, id);
            this.StateHasChanged();
        }
    }

    private void ShowCreatePartial()
    {
        IsCreatePartialHidden = !IsCreatePartialHidden;
    }
}
